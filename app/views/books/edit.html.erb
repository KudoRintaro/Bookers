<!DOCTYPE html>
<html>

  <body>

    <h1>Editing Book</h1>
    <% if @book.errors.any? %>
    <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>




    <%= form_with model: @book do |f| %>

    <p>Title</p>
    <%= f.text_field :title %>

    <P>Body</p>
    <%= f.text_area :body %>

    <%= f.submit "Update Book" %>
    <% end %>
    
    <%= link_to "Show", book_path(@book.id) %>
    |
    <%= link_to "Back", "/books" %>
  </body>

</html>