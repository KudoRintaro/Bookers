<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="books.scss"/>
    </head>

    <body>
        <header class="books-header">
            <h1>Books</h1>
        </header>

        <div class="column-box">
            <h5><strong>Title</strong></h5>
            <h5><strong>Body</strong></h5>
        </div>

         <div class="list-wrap">
            <% @books.each do |book| %>
          <div class="record">
               
                <p class="text-title"><%= book.title %></p>
                <p class="text-body"><%= book.body %></p>
    　　　　
    　　　　<div class="link-list">
                <%= link_to "Show", book_path(book.id) %>
                <%= link_to "Edit", edit_book_path(book.id) %>
                <%= link_to "Destroy", book_path(book.id) %>
            </div>
           </div>
          </div>
            <% end %>
        </div>

        <h2>New book</h2>
        <%= form_with model: @book do |f| %>

        <h4>title</h4>
        <%= f.text_field :title %>

        <h4>body</h4>
        <%= f.text_area :body %>

        <%= f.submit"投稿" %>

        <% end %>
    </body>
</html>