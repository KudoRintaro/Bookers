<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="books.scss"/>
    </head>

    <body>
        <header>
            <h1>Books</h1>
        </header>

        <div class="column-box">
            <p><strong>Title</strong></p>
            <p><strong>Body</strong></p>
        </div>

         <div class="list-wrap">
            <% @books.each do |book| %>
            <div class="list-text">
                <p><%= book.title %></p>
                <p><%= book.body %></p>
            </div>

            <div class="list-link">
                <%= link_to "Show", show_path(book.id) %>
                <%= link_to "Edit", edit_path(book.id) %>
                <%= link_to "Destroy", destroy_path(book.id) %>
            </div>
            <% end %>
        </div>

        <h2>New book</h2>
        <%= form_with model: @book do |f| %>

        <h4>title</h4>
        <%= f.text_field :title %>

        <h4>body</h4>
        <%= f.text_area :body %>

        <%= f.submit"投稿" %>

        <% end %>
    </body>
</html>